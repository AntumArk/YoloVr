FROM ubuntu:22.04

# Install dependencies for native Linux compilation
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    ninja-build \
    git \
    pkg-config \
    libgl1-mesa-dev \
    libx11-dev \
    libxrandr-dev \
    libxinerama-dev \
    libxcursor-dev \
    libxi-dev \
    libxss-dev \
    libglu1-mesa-dev \
    && rm -rf /var/lib/apt/lists/*

# Create workspace
WORKDIR /workspace

# Default command
CMD ["/bin/bash"]